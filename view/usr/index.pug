        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
        script.
            $(document).ready(function(){
                var menuNo = 0;
                $('#menu-site-map').click(function(){
                    $('#m-menu').css('margin-left', '0')
                })
                $('#mbl-menu-close').click(function(){
                    $('#m-menu').css('margin-left', '-60vw')
                })
                $('#menu > a').hover(function(){
                    menuNo = $(this).data('mainMenuNo');
                    $('.sub').css('display', 'none')
                    $('.sub#sub-menu' + menuNo).css('display', 'block');
                    $('#sub-menu').css('opacity', '0.9');
                    $('#sub-menu').css('height', '100px');
                }, function(){
                    $('.sub').css('display', 'none');
                    $('#sub-menu').css('opacity', '0');
                    $('#sub-menu').css('height', '0px');
                })
                $('#sub-menu').hover(function(){
                    $('.sub').css('display', 'none');
                    $('.sub#sub-menu' + menuNo).css('display', 'block');
                    $('#sub-menu').css('opacity', '0.9');
                    $('#sub-menu').css('height', '100px');
                }, function(){
                    $('.sub').css('display', 'none');
                    $('#sub-menu').css('opacity', '0');
                    $('#sub-menu').css('height', '0px');
                })
            })
        
