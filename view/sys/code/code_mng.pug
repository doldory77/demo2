                        input(type='text', id='mod_p_cd', readonly, value= selectedParentCd[0].cd)
                    div(class='tool-bar flex-left')
                        label.flex-label100 코드명:
                        input(type='text', id='mod_p_cd_nm', value= selectedParentCd[0].cd_nm)
                    div(class='tool-bar flex-left')
